number SearchArray(array arrsource, string textsrc, bool CaseSensitive)
    number retcode = -1
    number len = 0
    if CaseSensitive == True
        loop i from 0 to Count(arrsource) - 1
            if arrsource[i] == textsrc
                retcode = i
            end#if
        end#loop
    else    
        loop i from 0 to Count(arrsource) - 1
            if Ucase(arrsource[i]) == Ucase(textsrc)
                retcode = i
            end#if
        end#loop
    end#if
    Return retcode
end#number
















