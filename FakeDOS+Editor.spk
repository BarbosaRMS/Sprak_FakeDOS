void PrintASCIITable()
    loop x from 00 to 28


        PrintS (x + ":"+ IntToChar(x) + " | ")
        PrintS ((x+1*28)+":" + IntToChar(x+1*28)+ " | ")
        PrintS ((x+2*28)+":" + IntToChar(x+2*28)+ " | ")
        PrintS ((-x) + ":" + IntToChar(-x) + " | ")
        PrintS ((-(x+28)) + ":" + IntToChar(-(x+28)) + " | ")
        PrintS ((-(x+2*28)) + ":" + IntToChar(-(x+2*28)) + " | ")
        PrintS ((-(x+3*28)) + ":" + IntToChar(-(x+3*28)) + " | ")        
        Print("")
end#loop
end#void

